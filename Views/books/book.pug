extends ../layout/common

block content
    h1 List books
    style.
      th,td{
      border: 1px solid black;
      text-align:center;
      }
      table{
        width: 500px;
      }
    a(href="/books/create") New Book
    table
        tr
            th Title
            th Description
            th Update
            th Delete
        each book in books
            tr
                td= book.title
                td= book.description
                td
                    a(href="/books/"+ book.id + "/update") Update
                td
                    a(href="/books/"+ book.id +"/delete")   Delete

