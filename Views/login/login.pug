extends ../layout/common

block content
    if errors
        each error in errors
            alert.alert-danger= error
    h1 Login
    form(action="/login",method="POST")
        label(for="email") Email
        br
        input#email(type="text", name="email",value=values ? values.email : "",class="form-control")
        br
        label(for="pass") PassWord
        br
        input#pass(type="text", name="password",value=values ? values.password : "",class="form-control")
        br
        button(class="btn btn-primary mb-2") Login