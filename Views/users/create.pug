extends ../layout/common

block content
    if errors
        each error in errors
            alert.alert-danger= error
    h1 Create User
    form(action="/users/create",method="POST",enctype="multipart/form-data")
        label(for="name") Name
        br
        input#name(type="text", name="name",value=values ? values.name : "",class="form-control")
        br
        label(for="email") Email
        br
        input#email(type="text", name="email",value=values ? values.email : "",class="form-control")
        br
        label(for="password") Password  
        br
        input#password(type="text", name="password",value=values ? values.password : "",class="form-control")
        br
        
        .form-group
            label(for="avatar") Avatar
            input#avatar.form-control-file(type="file", name="avatar")
        br
        button(class="btn btn-primary mb-2") Create